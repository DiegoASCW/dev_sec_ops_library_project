pipeline {
    agent any

    environment {
        VENV_PATH = "venv"
        PROJECT_DIR = "dev_sec_ops_library_project/Containers/rest-api-setup/docker/micro-auth/auth_api"
        TEST_FILE = "test_login.py"
        REPO_DIR = "dev_sec_ops_library_project"
    }

    stages {
        stages {
        stage('Preparar Diretório') {
            steps {
                echo "Limpando repositório clonado anterior, se existir..."
                sh "rm -rf ${REPO_DIR}"
            }
        }
        stage('Preparar Ambiente') {
            steps {
                dir("${PROJECT_DIR}") {
                  sh '''
                        echo "Criando ambiente virtual..."
                        python3 -m venv venv
                        . venv/bin/activate
                        echo "Atualizando pip e instalando dependências..."
                        pip install --upgrade pip
                        if [ -f requirements.txt ]; then
                            pip install -r requirements.txt
                        fi
                        echo "Instalando pytest..."
                        pip install pytest
                        echo "Ambiente virtual pronto!"
                    '''
                }
            }
        }

        stage('Executar Testes Unitários') {
            steps {
                dir("${PROJECT_DIR}") {
                    sh '''
                        echo "Executando pytest..."
                        . venv/bin/activate
                        pytest -v --tb=short
                    '''
                }
            }
        }
    }

    post {
        always {
            dir("${PROJECT_DIR}") {
                echo "Limpando ambiente virtual..."
                sh "rm -rf ${VENV_PATH}"
            }
        }
    }
}